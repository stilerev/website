<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>Page Title</title>
  </head>

  <body>
    <div id="login-container">
      <div>
        <label for="login">Login</label>
        <input type="text" id="user" name="user" />
        <input type="password" id="password" name="password" />
      </div>
      <div>
        <button onclick="login()">Login</button>
      </div>
    </div>

    <!--https://getbootstrap.com/docs/5.1/forms/validation/ search file submit-->

    <form
      class="no-refresh row g-3 needs-validation"
      id="image-upload-form"
      novalidate
    >
      <div class="col-md-4">
        <label for="image-name" class="form-label">Name</label>
        <input type="text" class="form-control" id="image-name" required />
        <label for="image" class="form-label">Upload image</label>
        <input class="form-control" type="file" id="image" multiple />
      </div>
      <div class="col-12">
        <button class="btn btn-primary" type="submit" onclick="onClickIt()">
          Submit
        </button>
      </div>
    </form>

    <% imgs.forEach(image=> { %>
    <image src="image/<%= image %>"></image>
    <% }) %>

    <script>
      function login() {
        const username = document.getElementById("user").value;
        const password = document.getElementById("password").value;

        fetch("/login", {
          method: "POST",
          headers: {
            Accept: "application/json",
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            user: username,
            password: password,
          }),
        })
          .then((res) => res.json())
          .then((data) => {
            console.log(data);
          });
      }
    </script>

    <script>
      function onClickIt() {
        const image = document.getElementById("image").files[0];
        const formData = new FormData();

        const name = document.getElementById("image-name").value;
        let correctedName = "";

        if (!name) {
          correctedName = image.name;
        } else {
          const split = image.name.split(".");
          const ext = split[split.length - 1];
          correctedName = name + "." + ext;
        }

        image.name = correctedName.toLocaleLowerCase();
        formData.append("image", image);

        fetch("/image/" + correctedName, {
          method: "POST",
          body: formData,
        }).then((res) => {
          console.log(res);
        });
      }
    </script>

    <!--prevent refreshing on form submit-->
    <script>
      const form = document.getElementsByClassName("no-refresh");
      for (const el of form) {
        el.addEventListener("submit", (event) => {
          event.preventDefault();
        });
      }
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
